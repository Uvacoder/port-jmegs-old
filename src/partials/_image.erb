<% cloudinary = "https://res.cloudinary.com/jmegs" %>

<figure class="gallery-item" data-expand="-20">
  <img
    class="lazyload gallery-item__img" 
    src="<%= cloudinary %>/c_scale,w_640,f_auto/<%= id %>.jpg"
    data-src="<%= cloudinary %>/c_scale,w_1366,f_auto/<%= id %>.jpg"
    data-srcset="<%= cloudinary %>/c_scale,w_640,f_auto/<%= id %>.jpg 640w,
  <%= cloudinary %>/c_scale,w_1366,f_auto/<%= id %>.jpg 1366w,
  <%= cloudinary %>/c_scale,f_auto/<%= id %>.jpg 2732w" 
  alt="<%= caption if defined? caption %>" />
  
  <% if caption %>
    <figcaption class="gallery-item__caption"><%= caption %></figcaption>
  <% end %>
</figure>